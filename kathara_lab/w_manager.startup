ip address add 192.168.2.23/24 dev eth0
ip route add 0.0.0.0/0 via 192.168.2.1 dev eth0

cp /shared/wazuh_indexer_ssl_certs/root-ca.pem /etc/ssl/root-ca.pem
cp /shared/wazuh_indexer_ssl_certs/admin.pem /etc/ssl/filebeat.pem
cp /shared/wazuh_indexer_ssl_certs/admin-key.pem /etc/ssl/filebeat.key

echo 'nameserver 1.1.1.1' >> /etc/resolv.conf
echo $INDEXER_IP wazuh.indexer >> /etc/hosts
echo $MANAGER_IP wazuh.manager >> /etc/hosts
